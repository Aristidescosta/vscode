{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Egua",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#logical"
		},
		{
			"include": "#types"
		},
		{
			"include": "#arithmetic"
		},
		{
			"include": "#assignments"
		},
		{
			"include": "#comparison"
		},
		{
			"include": "#string-quoted-single"
		},
		{
			"include": "#string-quoted-double"
		},
		{ 	
			"include": "#storages" 
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.egua",
				"match": "\\b(var|se|senao|senaose|para|fazer|enquanto|escolha|caso|padrao|tente|pegue|finalmente|retorna|funcao|escreva)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "keyword.function.egua",
				"match": "\\b(aleatorio|aleatorioEntre|inteiro|mapear|ordenar|real|tamanho|texto|importar|ajuda|exemplo|limpar|salvar|carregar|fun1|fun1R|ajuda|exemplo|limpar|salvar|carregar|fun1|fun1R|linspace|fun2|fun2R|rand|aprox|pale|vet|qtd|plot|max|min|intervalo|mediana|smtr|media|ve|sqr|variancia|devpad|covar|coefvar|coefcorr|coluna|linha|transposta|matriz|matrizmult|matrizinv|matrizid|deter|csl|sen|cos|tan|arcos|arsen|artan|exp|log|pot|aleat|raizq|vmed|deltas|deltat|acel|mrufh|mrufhp|mruvel|mruvfh|mruvfhp|mruvvel|mruvvelp|inercia|vmmv|van|periodo|pid)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.egua",
				"match": "\\b(falso|verdadeiro|isto|nulo)\\b"
			}]
		},
		"logical": {
			"patterns": [{
				"name": "keyword.operator.logical.egua",
				"match": "\\b(e|ou)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.primitive.scala",
				"match": ""
			}]
		},
		"comments": {
			"patterns": [
				{ 
					"match": "(//).*",
					"name": "comment.line.double-slash"
				}
			]
		},
		"arithmetic": {
			"patterns": [{
				"name": "keyword.operator.arithmetic.egua",
				"match": "\\b(\\+|\\-|\\*|/|mod|div|\\:\\:)\\b"
			}]
		},
		"assignments": {
			"patterns": [{
				"name": "keyword.operator.assignment.egua",
				"match": "\\b(\\=|\\:=)\\b"
			}]
		},
		"comparison": {
			"patterns": [{
				"name": "keyword.operator.comparison.egua",
				"match": "\\b(<\\=|>\\=|\\=\\=|<|>|\\<\\>)\\b"
			}]
		},
		"string-quoted-single": {
			"name": "string.quoted.single.egua",
			"begin": "\\'",
			"end": "\\'",
			"patterns": [
				{
					"name": "constant.character.escape.egua",
					"match": "\\\\."
				}
			]
		},
		"string-quoted-double": {
			"name": "string.quoted.double.egua",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.egua",
					"match": "\\\\."
				}
			]
		},
		"storages": {
			"patterns": [
				{
					"name": "storage.type.swift",
					"match": "\\b(classe|herda|super|construtor)\\b"
				}
			]
		}
	},
	"scopeName": "source.egua"
}